<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.employeeperformanceevaluationsystem.HelloController">
  <TabPane>
    <Tab text="Employee">
      <TableView fx:id="employeeTable">
        <columns>
          <TableColumn fx:id="idColumn" text="ID"/>
          <TableColumn fx:id="nameColumn" text="Full Name"/>
          <TableColumn fx:id="departmentColumn" text="Department"/>
        </columns>
      </TableView>
    </Tab>
    <Tab text="Evaluation">
      <TableView fx:id="evaluationTable">
        <columns>
          <TableColumn fx:id="employeeColumn" text="Employee"/>
          <TableColumn fx:id="avgScoreColumn" text="Average Score"/>
        </columns>
      </TableView>
    </Tab>
  </TabPane>
</AnchorPane>
