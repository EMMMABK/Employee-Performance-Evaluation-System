<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.employeeperformanceevaluationsystem.HelloController">
  <Tab text="Employee">
    <VBox>
      <TableView fx:id="employeeTableView" />
      <HBox spacing="10">
        <Button fx:id="addButton" text="Add Employee" />
        <Button fx:id="editButton" text="Edit Employee" />
        <Button fx:id="deleteButton" text="Delete Employee" />
      </HBox>
    </VBox>
  </Tab>
  <Tab text="Marks">
    <VBox>
      <TableView fx:id="marksTableView" />
    </VBox>
  </Tab>
  <Tab fx:id="evaluationTab" text="Evaluation">
    <VBox fx:id="evaluationCriteriaBox" spacing="10">
      <Label text="Project Completion" />
      <Slider fx:id="projectCompletionSlider" min="0" max="100" />
      <Label text="Team Feedback" />
      <Slider fx:id="teamFeedbackSlider" min="0" max="100" />
      <Label text="Attendance" />
      <Slider fx:id="attendanceSlider" min="0" max="100" />
    </VBox>
  </Tab>
</TabPane>
