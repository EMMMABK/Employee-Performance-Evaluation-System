<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.employeeperformanceevaluationsystem.HelloController">
  <children>
    <!-- TableView for displaying employees -->
    <TableView fx:id="employeeTable" layoutX="14.0" layoutY="14.0" prefHeight="250.0" prefWidth="570.0">
      <columns>
        <TableColumn fx:id="idColumn" text="ID" />
        <TableColumn fx:id="nameColumn" text="Full Name" />
        <TableColumn fx:id="departmentColumn" text="Department" />
        <TableColumn fx:id="evaluationColumn" text="Evaluation" />
      </columns>
    </TableView>

    <!-- Buttons for Add, Edit, Remove, and Evaluate -->
    <HBox layoutX="14.0" layoutY="280.0" spacing="10.0" padding="10.0">
      <Button fx:id="addButton" text="Add" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
      <Button fx:id="removeButton" text="Remove" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
      <Button fx:id="editButton" text="Edit" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
      <Button fx:id="evaluateButton" text="Evaluate" style="-fx-background-color: #FFC107; -fx-text-fill: white;" />
    </HBox>

    <!-- Popup for Adding/Editing Employee -->
    <VBox layoutX="50.0" layoutY="100.0" spacing="10.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5; -fx-padding: 10;">
      <Label text="Full Name:" />
      <TextField fx:id="nameField" />
      <Label text="Department:" />
      <TextField fx:id="deptField" />
      <Button fx:id="saveButton" text="Save" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </VBox>
  </children>
</AnchorPane>


