<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.employeeperformanceevaluationsystem.HelloController">
  <children>
    <!-- TableView for displaying employees -->
    <TableView fx:id="employeeTable" layoutX="14.0" layoutY="14.0" prefHeight="250.0" prefWidth="570.0">
      <columns>
        <TableColumn fx:id="idColumn" text="ID" />
        <TableColumn fx:id="nameColumn" text="Full Name" />
        <TableColumn fx:id="departmentColumn" text="Department" />
        <TableColumn fx:id="evaluationColumn" text="Evaluation" />
      </columns>
    </TableView>

    <!-- Buttons for Add, Edit, Remove, and Evaluate -->
    <HBox layoutX="14.0" layoutY="280.0" spacing="10.0" padding="10.0">
      <Button fx:id="addButton" text="Add" />
      <Button fx:id="removeButton" text="Remove" />
      <Button fx:id="editButton" text="Edit" />
      <Button fx:id="evaluateButton" text="Evaluate" />
    </HBox>

    <!-- Popup for Adding/Editing Employee -->
    <VBox layoutX="50.0" layoutY="100.0" spacing="10.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5;">
      <Label text="Full Name:" />
      <TextField fx:id="nameField" />
      <Label text="Department:" />
      <TextField fx:id="deptField" />
      <Button fx:id="saveButton" text="Save" />
    </VBox>
  </children>
</AnchorPane>
