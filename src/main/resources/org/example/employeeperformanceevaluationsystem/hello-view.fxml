<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.employeeperformanceevaluationsystem.HelloController">
  <left>
    <VBox spacing="10" BorderPane.alignment="CENTER" style="-fx-padding: 20;">
      <Label text="Add New Employee" />
      <TextField fx:id="nameField" promptText="Employee Name" />
      <TextField fx:id="departmentField" promptText="Department" />
      <TextField fx:id="performanceScoreField" promptText="Performance Score (1-100)" />
      <Button text="Add Employee" onAction="#onAddEmployeeButtonClick" />
    </VBox>
  </left>
  <center>
    <ScrollPane fitToWidth="true">
      <VBox fx:id="employeeDisplayArea" spacing="10" style="-fx-padding: 10;" />
    </ScrollPane>
  </center>
</BorderPane>
